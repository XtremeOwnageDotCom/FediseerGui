<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Dark">
    <BarBrand>
        <BarItem>
            <BarLink To="#">
                <BarIcon IconName="IconName.Dashboard" />
                Fediseer Gui
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            @*            <BarItem>
            <BarLink To="#home">
            <BarIcon IconName="IconName.Dashboard" />
            Home
            </BarLink>
            </BarItem>*@
            <BarItem>
                <BarLink To="https://fediseer.com/" Target="Target.Blank">Fediseer Documentation</BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/instances/whitelisted">Whitelisted Instances</BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="/instances/guarantee">Add Guarantee</BarLink>
            </BarItem>
            <RequiresLogin>
                <BarItem>
                    <BarLink To="/Guarantees/my">My Guarantees</BarLink>
                </BarItem>
            </RequiresLogin>
            <BarItem>
                <BarLink To="/instances/claim">Claim Instance</BarLink>
            </BarItem>
            <BarItem>
                <BarLink To="https://github.com/XtremeOwnageDotCom/FediseerGui/issues" Target="Target.Blank">Report an issue</BarLink>
            </BarItem>
        </BarStart>
    </BarMenu>
</Bar>

@code {
    private bool collapseNavMenu = true;

    private string icon = "up-right-from-square";

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
